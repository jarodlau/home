# Show the class of the windows
alias xpop='xprop | grep --color=none "WM_CLASS\|^WM_NAME" | zenity --text-info '

# lan
alias wirelessMap='echo -e "Range 192.168.1.1-255" && nmap -sP 192.168.1.1-255'

