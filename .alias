# [ alias ]#{{{

# Some useful alias

# ls
alias ls='ls --color=auto'
alias ll='ls -lh'
alias la='ls -a'
#alias ls='ls -hF --color=auto'
alias lr='ls -R'                    # recursive ls
#alias ll='ls -l'
#alias la='ll -A'
alias lx='ll -BX'                   # sort by extension
alias lz='ll -rS'                   # sort by size
alias lt='ll -rt'                   # sort by date
alias lm='la | more'

alias ln='ln -i'

# safety features
#alias cp='cp -i'
#alias mv='mv -i'
#alias rm='rm -I'                    # 'rm -i' prompts for every file
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'
alias cp='cp -i -v'
alias mv='mv -i -v'
alias rm='rm -i -v'

# modified commands
#alias diff='colordiff'              # requires colordiff package
#alias grep='grep --color=auto'
alias more='less'
alias df='df -h'
alias du='du -c -h'
alias mkdir='mkdir -p -v'
alias nano='nano -w'
alias ping='ping -c 5'
alias ..='cd ..'

# new commands
alias da='date "+%A, %B %d, %Y [%T]"'
alias du1='du --max-depth=1'
alias hist='history | grep $1'      # requires an argument
alias openports='netstat --all --numeric --programs --inet --inet6'
alias psgrep='ps -Af | grep $1'          # requires an argument (note: /usr/bin/pg is installed by the util-linux package; maybe a different alias name should be used)
alias grepblack="grep '^[^#]' $1" # show the file without comment(like '#')

# privileged access
