"set passkeys+='mail\.google\.com':c/jkhnpovuelxsfra#`[]z?*nrtgidIU+-=<Tab><Return>
"set passkeys+='google\.com/reader':jkvnpbumoaAXNOVPJK?gehtl<Return>
"set passkeys+='github\.com/':s?l<Return>
"/*}}}*/

